<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- User Style -->
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <header class="text-center">
      <div class="row">
        <div class="logo-div col-sm-4 header-div">
          <h4><a href="/">League Manager</a></h4>
        </div>
        <div class="col-sm-4">
          <h1>Game Results</h1>
          <h4><%= game.home.name %> vs. <%= game.away.name %></h4>
    			<nav>
    				<ul class="list-inline">
    					<li>
    						<a href="/leagues">Leagues</a>
    					</li>
    					<li>
    						<a href="/teams">Teams</a>
    					</li>
    				</ul>
    			</nav>
        </div>
        <div class="col-sm-4 header-div">
          <ul class="list-inline">
            <% if(!currentUser) { %>
              <li>
                <a class="btn btn-default btn-sm" href="/sessions/new">Log In</a>
              </li>
              <li>
                <a class="btn btn-default btn-sm" href="/users/new">Register</a>
              </li>
            <% } else { %>
              <li>
                Welcome, <%= currentUser.username %>!
              </li>
              <li>
                <form class="" action="/sessions?_method=DELETE" method="POST">
                  <input class="btn btn-default btn-sm" type="submit" value="Logout">
                </form>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
		</header>
    <hr>
		<main class="container">
      <div class="row text-center">
        <div class="col-xs-4">
          <br>
          <br>
          <h4>Home</h4>
          <h2><%= game.home.name %></h2>
        </div>
        <div class="col-xs-4">
          <h3><%= game.location %></h3>
          <h5><%= game.date.toJSON().split('T')[0] %></h5>
          <h2><%= game.homeScore %> - <%= game.awayScore %></h2>
        </div>
        <div class="col-xs-4">
          <br>
          <br>
          <h4>Away</h4>
          <h2><%= game.away.name %></h2>
        </div>
      </div>
      <% if(currentUser) { %>
        <div class="text-center">
          <a href="/games/<%= game._id %>/edit">Edit Game</a>
        </div>
      <% } %>
    </main>
  </body>
</html>
