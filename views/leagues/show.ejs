<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- User Style -->
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <header class="text-center">
			<h1><%= league.name %></h1>
			<h4><%= league.sport %></h4>
			<nav>
				<ul class="list-inline">
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/leagues">Leagues</a>
					</li>
				</ul>
			</nav>
		</header>
    <hr>
    <main class="container">
      <section class="text-center">
        <h3>Teams</h3>
        <ul class="list-unstyled">
          <% for(var i = 0; i < league.teams.length; i++) { %>
            <a href="/teams/<%= league.teams[i]._id %>">
              <li><%= league.teams[i].name %></li>
            </a>
          <% } %>
        </ul>
        <a class="btn btn-default" href="/leagues/<%= league.id %>/edit">Edit League</a>
        <hr>
        <form class="" action="/leagues/<%= league.id %>?_method=DELETE" method="POST">
          <input class="btn btn-danger" type="submit" value="Delete League">
        </form>
      </section>
    </main>
  </body>
</html>
